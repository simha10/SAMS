# Server Configuration
PORT=8080
NODE_ENV=development
# NODE_ENV=production

# Database Configuration
MONGO_URI=your-mongodb-connection-string

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_SALT_ROUNDS=10

# Frontend URL
FRONTEND_URL=http://localhost:5173
# For production deployment:
# FRONTEND_URL=production url

# Redis Configuration - Modern Approach (Recommended for Production)
# Use this approach for Upstash, Redis Cloud, Render Redis, Railway Redis, etc.

# Redis Configuration - Modern Approach (Recommended for Production)
REDIS_URL=

# Redis Configuration - Using individual parameters (Fallback)
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_HOST=
REDIS_PORT=

# Cron execution control
# Set RUN_CRON=true on Render to run cron jobs
# Set RUN_CRON=false on Cloud Run (use Cloud Scheduler instead)
RUN_CRON=true

